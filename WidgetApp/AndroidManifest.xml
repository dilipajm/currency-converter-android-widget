<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.newxlabs.currencyapp"
    android:versionCode="4"
    android:versionName="1.3" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:label="@string/app_name" android:debuggable="true" android:icon="@drawable/icon">
        <receiver android:name="MainActivity" >
            <intent-filter>
                <action 
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
        
        <activity android:name=".Profile_View"
               android:label="NewXLabs Technologies">
         <intent-filter>
             <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
         </intent-filter>
     </activity>
        
    </application>

</manifest>
